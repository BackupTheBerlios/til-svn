# This is the test file for the "modern" plugin contained in the TIL package.

# movement
press	:: <UP>		::	:: move row back|screen
press	:: <DOWN>	::	:: move row screen
press	:: <LEFT>	::	:: move col back
press	:: <RIGHT>	::	:: move col
press	:: <UP>		:: C	:: move row back|screen
press	:: <DOWN>	:: C	:: move row screen
press	:: <LEFT>	:: C	:: move word back
press	:: <RIGHT>	:: C	:: move word
press	:: <HOME>	::	:: move line back|screen
press	:: <END>	::	:: move line end|screen
press	:: <HOME>	:: C	:: move doc back
press	:: <END>	:: C	:: move doc end
press	:: <PAGEUP>	::	:: move page back|screen
press	:: <PAGEDOWN>	::	:: move page screen
press	:: <PAGEUP>	:: C	:: move page back
press	:: <PAGEDOWN>	:: C	:: move page

# entering text
press	:: A		::	:: replace t A
press	:: /		::	:: replace t /
press	:: aoeruc	::	:: replace t aoeruc
press	:: õ		::	:: replace t õ

# deleting text
press	:: <BACKSPACE>	::	:: select :: move col back :: delete :: select none
press	:: <DELETE>	::	:: select :: move col :: delete :: select none
press	:: <BACKSPACE>	:: C	:: select :: move word back :: delete :: select none
press	:: <DELETE>	:: C	:: select :: move word end :: delete :: select none

# switching to override mode
press	:: <INSERT>	::	:: cursor block :: override on
press	:: A		::	:: replace t A
press	:: <INSERT>	::	:: cursor line :: override off

# selection
press	:: <RIGHT>	:: S	:: select :: move col
press	:: <DOWN>	:: S	:: move row screen
press	:: <LEFT>	::	:: select none :: move col back

# selection and editing
press	:: <RIGHT>	:: S,C	:: select :: move word
press	:: <BACKSPACE>	::	:: delete :: select none
press	:: <RIGHT>	:: S,C	:: select :: move word
press	:: <DELETE>	::	:: delete :: select none
press	:: <RIGHT>	:: S,C	:: select :: move word
press	:: A		::	:: replace t A :: select none



# vim: ts=8
